{
  "name": "fastfligran",
  "version": "1.0.0",
  "description": "Hızlı ve pratik fligran ekleme uygulaması - Fast and practical watermark application",
  "main": "main.js",
  "homepage": "https://github.com/ismailakcay/fastfligran",
  "repository": {
    "type": "git",
    "url": "https://github.com/ismailakcay/fastfligran.git"
  },
  "bugs": {
    "url": "https://github.com/ismailakcay/fastfligran/issues"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "fligran",
    "watermark",
    "görsel",
    "logo",
    "electron",
    "desktop-app",
    "image-processing",
    "turkish",
    "windows"
  ],
  "author": {
    "name": "İsmail Akçay",
    "email": "contact@apkdelisi.net",
    "url": "https://apkdelisi.net"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.fastfligran.app",
    "productName": "FastFligran",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "style.css",
      "renderer.js",
      "logo.png",
      "package.json"
    ],
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "portable",
      "compression": "maximum"
    }
  }
}